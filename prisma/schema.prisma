// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
}

model User {
  id            String    @id @default(cuid())
  name          String?   @unique
  shoes         Shoes[]
}

model Shoes {
  id            String    @id @default(cuid())
  name          String
  mileage       Int
  limit         Int
  user User @relation(fields: [name], references: [id])
}